{
    "name": "server",
    "description": "Server for running several web applications",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "clean": "rm -rf node_modules build dist .turbo",
        "dev": "cross-env PAYLOAD_CONFIG_PATH=../cms/src/config.ts NODE_ENV=development nodemon --exec 'node --require tsm' src/index.ts",
        "build:server": "rm -rf dist/* && tsc",
        "build": "npm run build:server",
        "serve": "cross-env PAYLOAD_CONFIG_PATH=../cms/dist/config.js NODE_ENV=production node --conditions=serve dist/index.js",
        "lint": "eslint --ext .ts,.js ./src/index.ts"
    },
    "dependencies": {
        "cms": "*",
        "web": "*",
        "dotenv": "^16.3.1",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/node": "^18.13.0",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "nodemon": "^3.0.1",
        "tsm": "^2.3.0",
        "typescript": "^4.9.5"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
